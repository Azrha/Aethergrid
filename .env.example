# Ollama configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_ROLE_MODELS=humanoid=gemma3:4b,animal=qwen2.5:3b,alien=deepseek-r1:1.5b,default=qwen2.5:3b
OLLAMA_THOUGHTS_ENABLED=true
OLLAMA_ACTIONS_ENABLED=true
OLLAMA_CONVO_ENABLED=false
OLLAMA_TIMEOUT=6.0

# Agent brain (memory/plans)
BRAIN_ENABLED=true
BRAIN_MEMORY_LIMIT=80
BRAIN_SUMMARY_INTERVAL=120
BRAIN_OBSERVE_INTERVAL=6
BRAIN_NEAR_RADIUS=4.0
BRAIN_AUTO_THOUGHTS=false
BRAIN_AUTO_ACTIONS=false
BRAIN_AUTO_CONVO=false
BRAIN_TICK_MS=1200
